<div class="dashboard_op_section">
    
    <table id="extracharges" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th style="display:none" data-property-name="city">City</th>
            <th>Property</th>
            <th>Label</th>
            <th>Date</th>
            <th>Comments</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            {% for id, data in reporting['extracharges'] %}
                <tr>
                    <td style="display:none" width="20%">{{ data.city }}</td>
                    <td width="20%">{{ data.property.label }}</td>
                    <td width="5%">{{ data.label }}</td>
                    <td width="5%">{{ data.date|formatDate }}</td>
                    <td>{{ data.comments }}</td>
                    <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-wehost btn-sm dropdown-toggle" data-toggle="dropdown">
                            Choose...
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ url('admin', { 'entity': 'ExtraCharge', 'action': 'edit', 'id': data.id, 'redirect': 'dashboard', 'redirectParam[date]': currentMonth, 'redirectParam[marketId]': selectedMarket }) }}">Edit extra charge</a>
                          </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>