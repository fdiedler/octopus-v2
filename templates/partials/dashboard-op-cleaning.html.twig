<p><a class="linkDefault" href="{{ url('admin', { 'entity': 'Cleaning', 'action': 'new', 'redirect': 'dashboard', 'redirectParam[date]': currentMonth, 'redirectParam[marketId]': selectedMarket  }) }}">Add a property cleaning</a></p>
                    
<div class="dashboard_op_section">
    
    <table id="cleaning" class="table table-striped table-bordered">
        <thead>
        <tr>
            <th style="display:none" data-property-name="city">City</th>
            <th>Property</th>
            <th>Presta</th>
            <th>Type</th>
            <th>HT amount</th>
            <th>Cleaning date</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
            {% for id, data in reporting['cleanings'] %}
                <tr>
                    <td style="display:none" width="20%">{{ data.city }}</td>
                    <td width="20%"><a class="linkDefault" href="{{ url('admin', { 'entity': 'Reservation', 'action': 'list', byProperty: data.property.id, 'redirect': 'dashboard', 'redirectParam[date]': currentMonth, 'redirectParam[marketId]': selectedMarket }) }}">{{ data.property.label }}</a></td>
                    <td>{{ data.presta }}</td>
                    <td>{{ data.type }}</td>
                    <td>{{ data.amount/100 }} â‚¬</td>
                    <td>{{ data.date|formatDate }}</td>
                    <td>{{ data.comments }}</td>
                    <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-wehost btn-sm dropdown-toggle" data-toggle="dropdown">
                            Choose...
                          </button>
                          <div class="dropdown-menu">
                            <a class="dropdown-item" href="{{ url('admin', { 'entity': 'Cleaning', 'action': 'edit', 'id': data.id, 'redirect': 'dashboard', 'redirectParam[date]': currentMonth, 'redirectParam[marketId]': selectedMarket }) }}">Edit cleaning</a>
                          </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
