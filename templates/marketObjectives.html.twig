{% extends 'base.html.twig' %}

{% block content %}
    {% set currentYear = "now"|date("Y") %}
    
    <h1>Edit objective for market {{ market.name }} for {{ currentYear }}</h1>

    <p>Enter the objective in term of <b>number of reservations</b> for each month. To cancel an objective, set -1 as value for the given month.</p>
    
    <form method="POST" action="{{ url('market_objectives_edit') }}">
        <input type="hidden" name="market_id" value="{{ market.id }}" />
        
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th width="10%">Month</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
                {% for month in 1..12 %}
                   {% set date = month ~ "/1/2016" %}
                   {% set key = currentYear ~ "_" ~ date|date("m") %}
                   {% set objectiveKey = currentYear ~ "-" ~ date|date("m") ~ "-01"%}
                   {% set value = (objectives[objectiveKey] is defined) ? objectives[objectiveKey] : "" %}
                    <tr>
                        <td>{{ date|date("F") }}</td>
                        <td><input type="text" name="{{ currentYear }}_{{ date|date("m") }}" value="{{ value }}" size="5" maxlength="5" /></td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="2"><button type="submit" class="btn btn-wehost btn-sm">Apply modifications</button></td>
                </tr>
            </tbody>
        </table>
    </form>
    
    <hr />

{% endblock %}

{% block javascript %}
    <script type="text/javascript">

    </script>
{% endblock %}